<% include ../partials/header %>

<div class="container">
<div style="width:50%; margin: 0 auto;">
			<h1>
	Edit <%= campground.name %>
</h1>
	<form method="POST" action="/campgrounds/<%= campground._id %>/?_method=PUT">
		<div class="form-group">
			<input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%= campground.name %>">
		</div>
	
		<div class="form-group">
			<input class="form-control" type="number" name="campground[price]" min="0.01" step="0.01" value="<%= campground.price %>">
		</div>
		
		<div class="form-group">
			<input class="form-control" type="text" name="campground[image]" placeholder="image url" value="<%= campground.image %>">
		</div>
		
		<div class="form-group">
			<input class="form-control" type="text" name="campground[description]" placeholder="description" value="<%= campground.description %>">
		</div>
	
		<div class="form-group">
			<button class="btn btn-lg btn-light btn-block">
		submit!
	</button>
		</div>
	
		
</form>
	<a href="/campgrounds">Go Back</a>
	
	</div>

</div>


<% include ../partials/footer %>